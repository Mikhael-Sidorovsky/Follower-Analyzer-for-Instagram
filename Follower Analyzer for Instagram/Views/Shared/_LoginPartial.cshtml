@{ string login = (string)HttpContext.Current.Session["Login"]; }

@if (login != null)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav mr-3">
            <li class="nav-item">
                <h1 class="navbar-brand pt-2"><i>Hello, @login!</i></h1>
            </li>
            <li class="nav-item">
                @Html.ActionLink("Log out", "Logout", "Account", null, new { @class = "nav-link" })
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav mr-3">
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", null, new { @class = "nav-link" })</li>
    </ul>
}
