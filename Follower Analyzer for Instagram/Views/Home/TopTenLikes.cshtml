@model List<Follower_Analyzer_for_Instagram.Models.InstagramPost>

@if (Model != null && Model.Count != 0)
{
    <div class="container py-5">
        <div class="row m-auto">
            @foreach (var post in Model)
            {
                <div class="col-md-6 p-2">
                    <div class="text-center font-weight-bold">
                        @post.CountOfLikes
                        <svg class="bi bi-heart-fill mr-2" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                        </svg>
                    </div>
                    <div class="mx-auto text-center my-2">
                        @if (post.MediaFileUri.IndexOf(".mp4") == -1)
                        {
                            <img class="h-75 w-75" src="@post.MediaFileUri" alt="Instagram media file">
                        }
                        else
                        {
                            <video controls>
                                <source src="@post.MediaFileUri" type="video/mp4">
                                Your browser does not support HTML video.
                            </video>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

}