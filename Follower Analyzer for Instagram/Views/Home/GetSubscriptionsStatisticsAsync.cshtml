@model Follower_Analyzer_for_Instagram.Models.SubscriptionsStatisticsViewModel

@if (Model != null)
{
    <div class="py-5 mx-4">
        <div class="row m-auto">
            <div class="col-md-6 p-2">
                <div class="mx-auto text-center my-2">
                    <img class="h-75 w-75 border border-dark rounded" src="@Model.ProfilePictureUrl" alt="Instagram media file">
                </div>
                <div class="text-center font-weight-bold">
                    @Model.UserName
                    <svg class="bi bi-person-bounding-box" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z" />
                        <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    </svg>
                </div>
            </div>
            <div class="col-md-6 p-2 mx-auto text-center my-2">
                <div class="alert alert-dark mx-4">
                    <strong>
                        Followings:
                        @if (Model.NewSubscriptions != null)
                        {
                            <span>@Html.DisplayFor(model => model.NewSubscriptions.Count)</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </strong>
                </div>
                <div class="alert alert-dark mx-4">
                    <strong>
                        Followers:
                        @if (Model.UnsubscribedSubscriptions != null)
                        {
                            <span>@Html.DisplayFor(model => model.UnsubscribedSubscriptions.Count)</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </strong>
                </div>
            </div>
        </div>
    </div>
}

