@model Follower_Analyzer_for_Instagram.Models.ViewModels.FollowersStatisticsViewModel

<table cellpadding="0" cellspacing="0" border="0">
    <tr>
        <td valign="top"><b>New Followers</b></td>
        <td>
            @if (Model != null && Model.NewFollowers != null)
            {
                <span>@Html.DisplayFor(model => model.NewFollowers.Count)</span>
            }
            else
            {
                <span>-</span>
            }
        </td>
        <td valign="top"><b>Have Unfollowed Me</b></td>
        <td>
            @if (Model != null && Model.NewFollowers != null)
            {
                <span>@Html.DisplayFor(model => model.UnsubscribedFollowers.Count)</span>
            }
            else
            {
                <span>-</span>
            }
        </td>
    </tr>
</table>
